{
  "name": "@claude-agent/core",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./claude": {
      "import": "./dist/claude/index.mjs",
      "require": "./dist/claude/index.js",
      "types": "./dist/claude/index.d.ts"
    },
    "./checkpoints": {
      "import": "./dist/checkpoints/index.mjs",
      "require": "./dist/checkpoints/index.js",
      "types": "./dist/checkpoints/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "simple-git": "^3.22.0",
    "nanoid": "^5.0.4",
    "eventemitter3": "^5.0.1",
    "@anthropic-ai/claude-agent-sdk": "^0.1.0"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "vitest": "^1.2.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
